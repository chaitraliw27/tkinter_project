import pandas as pd

# Example DataFrames
df1 = pd.DataFrame({'name': ['John', 'Alice', 'Bob'],
                    'BFN code': [123, 456, 789],
                    'test': ['A', 'B', 'C']})

df2 = pd.DataFrame({'name': ['John', 'Alice', 'Bob'],
                    'BFN code': [123, 459, 789],  # Introducing a difference
                    'test': ['A', 'B', 'D']})     # Introducing a difference

# List to store differences
differences = []

# Iterate over rows and compare content column-wise
for index, row in df1.iterrows():
    for col in df1.columns:
        if row[col] != df2.at[index, col]:
            differences.append(f"Difference at row {index + 1} in column '{col}': "
                               f"{row[col]} != {df2.at[index, col]}")

# Print differences
if differences:
    print("Differences found:")
    for diff in differences:
        print(diff)
else:
    print("No differences found.")
