import pandas as pd

# Example DataFrames
df1 = pd.DataFrame({'name': ['John', 'Alice', 'Bob'],
                    'BFN code': [123, 456, 789],
                    'test': ['A', 'B', 'C']})

df2 = pd.DataFrame({'name': ['John', 'Alice', 'Bob'],
                    'BFN code': [123, 459, 789],  # Introducing a difference
                    'test': ['A', 'B', 'D']})     # Introducing a difference

# List to store differences
differences = []

# Iterate over columns and compare content
for col in df1.columns:
    col_diffs = df1[col] != df2[col]
    if col_diffs.any():
        differences.append(f"Differences in column '{col}':")
        for row_num, (index, value) in enumerate(col_diffs.items(), start=1):
            if value:
                differences.append(f"  - Row {row_num}: {df1.at[index, col]} != {df2.at[index, col]}")

# Print differences
if differences:
    print("Column-wise differences found:")
    for diff in differences:
        print(diff)
else:
    print("No column-wise differences found.")
