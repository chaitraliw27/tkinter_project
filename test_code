import pandas as pd

# Assuming df is your DataFrame created from the CSV

# Function to sort comma-separated values
def sort_comma_sep_values(s):
    # Split the string by comma, sort the resulting list, and join them back into a string
    return ','.join(sorted(str(s).split(',')))

# Iterate through each column
for col in df.columns:
    # Check if the column contains comma-separated values
    if df[col].apply(lambda x: ',' in str(x)).any():
        # If yes, apply the sorting function to each cell in the column
        df[col] = df[col].apply(sort_comma_sep_values)

# Now your DataFrame contains sorted comma-separated values in columns where they were found
