import pandas as pd

# Sample DataFrame with missing and unordered columns
data = {
    'node_name': ['BFN', 'Wholesale', 'Security'],
    'in_prod': [2, 2, 2],
    'in_jira': [2, 2, 0]
}
df = pd.DataFrame(data)

# Hardcoded column names in the desired order
desired_columns = ['node_name', 'in_jira', 'in_prod', 'in_both']

# Function to ensure DataFrame has the desired columns in the correct order
def ensure_columns(df, desired_columns):
    # Add missing columns with empty values
    for col in desired_columns:
        if col not in df.columns:
            df[col] = ''
    
    # Reorder columns to match the desired order
    df = df[desired_columns]
    return df

# Apply the function to the DataFrame
df = ensure_columns(df, desired_columns)

# Display the modified DataFrame
print(df)
