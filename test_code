import pandas as pd

# Sample DataFrame
df = pd.DataFrame({
    'Column1': [1, 2, 3],
    'Column2': [4, 5, 6]
})

# Generate link
link_text = 'View Difference'
url = 'diff.html'

# Create clickable link in plain text format
text_link = f'=HYPERLINK("{url}", "{link_text}")'

# Add the link as a new column in the DataFrame
df['Difference Link'] = text_link

# Save DataFrame to Excel file
df.to_excel('output.xlsx', index=False)
