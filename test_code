import pandas as pd

# Sample DataFrame
data = {
    'node_name': ['A', 'B', 'A', 'B', 'C'],
    'A': [1, 2, 3, 4, 5],
    'B': [6, 7, 8, 9, 10],
    'C': [11, 12, 13, 14, 15]
}

df = pd.DataFrame(data)

# Group by 'node_name' and sum the values in column 'A' where the value is True, otherwise add zero
sum_of_true_A = df.groupby('node_name')['A'].apply(lambda x: x[x == True].sum() if any(x == True) else 0).reset_index(name='sum_of_true_A')

print(sum_of_true_A)
